{
    "version": "1.0.5",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "repository": "git@github.com:Owoade/korapay-sdk.git",
    "type": "module",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "dev": "nodemon --exec ts-node src/index",
        "test": "jest   --timeout=10000"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "korapay-node",
    "author": "Owoade Anuoluwapo <owoadeanuoluwapo2@gmail.com>",
    "module": "dist/korapay-node.esm.js",
    "size-limit": [
        {
            "path": "dist/korapay-node.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/korapay-node.esm.js",
            "limit": "10 KB"
        }
    ],
    "dependencies": {
        "axios": "^1.4.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.22.9",
        "@babel/preset-typescript": "^7.22.5",
        "@size-limit/preset-small-lib": "^8.2.6",
        "@types/jest": "^29.5.3",
        "babel-jest": "^29.6.1",
        "dotenv": "^16.3.1",
        "husky": "^8.0.3",
        "jest": "^29.6.1",
        "size-limit": "^8.2.6",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsdx": "^0.14.1",
        "tslib": "^2.6.0",
        "typescript": "^5.1.6"
    }
}
